<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiops.api.mapper.ServiceEndpointMapper">

    <select id="selectList" resultType="com.aiops.api.entity.ServiceEndpoint"
            parameterType="com.aiops.api.entity.dto.ServiceEndpointSearchDto">
        select * from service_endpoint
        <where>
            <if test="serviceEndpointId">
                and service_endpoint_id = #{serviceEndpointId}
            </if>
            <if test="serviceId">
                and service_id = #{serviceId}
            </if>
            <if test="name">
                and name like "%"#{name}"%"
            </if>
        </where>
    </select>
</mapper>